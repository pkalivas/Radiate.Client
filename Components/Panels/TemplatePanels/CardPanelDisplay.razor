@inherits PanelDisplayComponent<CardPanel>

@if (CanDisplay())
{
    <MudCard Elevation="2" Class="h-100">
        <MudCardHeader>
            <CardHeaderContent>
                <DynamicComponent Type="@Model.Header" Parameters="@Model.HeaderProps"/>
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
            <DynamicComponent Type="@Model.Content" Parameters="@Model.Props"/>
        </MudCardContent>
        <MudCardActions>
            @if (Model.Actions != null)
            {
                <DynamicComponent Type="@Model.Actions" Parameters="@Model.ActionsProps"/>
            }
        </MudCardActions>
    </MudCard>
}
