@if (string.IsNullOrEmpty(ImageUrl))
{
    <MudPaper>
        <MudText Typo="Typo.body1">No image selected</MudText>
    </MudPaper>
}
else
{
    <MudImage Fluid="true" Class="rounded" Title="@ImageTitle" Src="@ImageUrl" Height="@ImageHeight" Width="@ImageWidth"/>
}

@code 
{
    [Parameter] public string? ImageTitle { get; set; }
    [Parameter] public string? ImageUrl { get; set; }
    [Parameter] public int? ImageHeight { get; set; } = 250;
    [Parameter] public int? ImageWidth { get; set; } = 250;
}
