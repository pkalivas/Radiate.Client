@using Radiate.Client.Components.Store.Interfaces
@inherits StateComponent<TestSub, Radiate.Client.Components.Store.States.Features.RootFeature>
@inject ILogger<TestSub> Logger
@inject Redux.Store<RootFeature> Store

@code {
    
    protected override void OnStateInitialized()
    {
        Subscribe<IAction>(act =>
        {
            Store.Dispatch(act);
            Logger.LogInformation("Received action {Action}", act);
        });
    }

}