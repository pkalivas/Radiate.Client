@inherits PanelDisplayComponent<CardPanel>

@if (CanDisplay())
{
    <MudCard Elevation="2" Class="h-100">
        <MudCardHeader>
            <CardHeaderContent>
                <MudText Typo="Typo.h6">@Model.Title</MudText>
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
            <DynamicComponent Type="@Model.Content" Parameters="@Model.Props"/>
        </MudCardContent>
    </MudCard>
}
