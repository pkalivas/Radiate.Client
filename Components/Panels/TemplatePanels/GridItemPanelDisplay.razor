@inherits PanelDisplayComponent<GridPanel.GridItem>

@if (CanDisplay())
{
    <MudItem md="Model.ColSpan" @key="@TrackByKey()">
        @foreach (var (child, childIdx) in Model.ChildPanels.Select((child, childIdx) => (child, childIdx)))
        {
            <PanelDisplay PanelId="@child.Id" @key="@TrackByKey(child, childIdx)"/>
        }
    </MudItem>
}