@inherits PanelDisplayComponent<ToolbarPanel>

@if (CanDisplay())
{
    <MudPaper Elevation="2"
              Height="@GetHeight()"
              Class="h-full"
              @key="@TrackByKey()">
        <ToolBar Title="@Model.Title" Actions="@Model.Actions"/>
        <DynamicComponent Type="@Model.Content"/>
    </MudPaper>
}

@code {
    private string GetHeight() => $"{Model.Height}px";
}