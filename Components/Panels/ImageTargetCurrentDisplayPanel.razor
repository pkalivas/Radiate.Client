@inherits StoreComponent<ImageTargetCurrentDisplayModel>

<div class="mt-3 mb-3">
    <MudGrid>
        <MudItem md="6">
            @if (!Model.TargetImage.IsEmpty)
            {
                <div Class="d-flex justify-content-center">
                    <ImageDisplay ImageUrl="@Model.TargetImage.ImageDisplay" ImageTitle="Target"/>
                </div>
            }
            else
            {
                <div Class="d-flex justify-content-center">
                </div>
            }
        </MudItem>
        <MudItem md="6">
            <div Class="d-flex justify-content-center">
                <ImageDisplay ImageUrl="@Model.CurrentImage.ImageDisplay" ImageTitle="Current"/>
            </div>
        </MudItem>
    </MudGrid>
</div>


@code {

    protected override IObservable<ImageTargetCurrentDisplayModel> Select() => Store.Select(ImageSelectors.SelectTargetCurrentDisplayPanelModel);

}
