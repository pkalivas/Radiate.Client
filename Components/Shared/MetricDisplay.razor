@using Radiate.Engines.Entities

@if (Metric != null)
{
    <div class="col">
        <div class="row">
            <div class="col">
                <h5>@Metric.Name</h5>
                <MudDivider/>
                <div class="row mt-2">
                    <div class="col">
                        <div class="row">
                            <div class="col-4">
                                <h6>∧</h6>
                            </div>
                            <div class="col-4" style="font-size: 12px;">
                                @Math.Round(Metric.Statistics.Max, 3)
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="row">
                            <div class="col-4">
                                <h6>∨</h6>
                            </div>
                            <div class="col-4" style="font-size: 12px;">
                                @Math.Round(Metric.Statistics.Min, 3)
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="row">
                            <div class="col-4">
                                <h6>μ</h6>
                            </div>
                            <div class="col-4" style="font-size: 12px;">
                                @Math.Round(Metric.Statistics.Mean, 3)
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="row">
                            <div class="col-4">
                                <h6>K</h6>
                            </div>
                            <div class="col-4" style="font-size: 12px;">
                                @Math.Round(Metric.Statistics.Kurtosis, 3)
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="row">
                            <div class="col-4">
                                <h6>S</h6>
                            </div>
                            <div class="col-4" style="font-size: 12px;">
                                @Math.Round(Metric.Statistics.Skewness, 3)
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="row">
                            <div class="col-4">
                                <h6>s²</h6>
                            </div>
                            <div class="col-4" style="font-size: 12px;">
                                @Math.Round(Metric.Statistics.Variance, 3)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        
            <div class="col">
                @ChildContent
            </div>
        </div>
    </div>
    
}

@code {
    [Parameter] public MetricValue? Metric { get; set; }
    [Parameter] public RenderFragment? ChildContent { get; set; }
}
