@using Radiate.Client.Components.Store.Schema
@using Radiate.Client.Components.Store.States.Features

<MudDialog>
    <DialogContent>
        <div>
            <MudSelect SelectedValuesChanged="@OnModelChange" 
                       Value="@RunFeature.Inputs.ModelType" 
                       MultiSelection="false"
                       HelperText="Model To Run"
                       T="string"
                       Label="Model"
                       Variant="Variant.Text">
                @foreach (var model in StateOptions.ModelNames)
                {
                    <MudSelectItem Value="@model"/>
                }
            </MudSelect>
        </div>
        <div>
	        <MudSelect SelectedValuesChanged="@OnDataSetChange"
	                   Value="@RunFeature.Inputs.DataSetType"
	                   MultiSelection="false"
	                   HelperText="DataSet To Run"
	                   T="string"
	                   Label="DataSet"
	                   Variant="Variant.Text">
                @if (RunFeature.Inputs.ModelType == "Image")
                {
                    @foreach (var data in StateOptions.ImageDataSetNames)
                    {
	                    <MudSelectItem Value="@data"/>
                    }
                }
                else
                {
	                @foreach (var data in StateOptions.DataSetNames)
	                {
		                <MudSelectItem Value="@data"/>
	                }
                }
	        </MudSelect>
        </div>
        <div class="mt-3">
            <h5>Genetic Inputs</h5>
            <MudDivider/>
            <div class="col">
                <MudNumericField Label="Population Size"
                                 Variant="Variant.Filled"
                                 Value="@RunFeature.Inputs.PopulationSize"
                                 ValueChanged="@((int size) => RunFeature.Inputs.PopulationSize = size)">
                </MudNumericField>
                <MudNumericField Label="Mutation Rate"
                                 Variant="Variant.Filled"
                                 Value="@RunFeature.Inputs.MutationRate"
                                 ValueChanged="@((float rate) => RunFeature.Inputs.MutationRate = rate)">
                </MudNumericField>
                <MudNumericField Label="Max Epochs"
                                 Variant="Variant.Filled"
                                 Value="@RunFeature.Inputs.IterationLimit"
                                 ValueChanged="@((int limit) => RunFeature.Inputs.IterationLimit = limit)">
                </MudNumericField>
            </div>    
        </div>
        
        <MudDivider/>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Start</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    
    private RunFeature RunFeature { get; set; }

    protected override void OnInitialized()
    {
        RunFeature = new RunFeature();
        base.OnInitialized();
    }

    void Cancel() => MudDialog.Cancel();

    void Submit() => MudDialog.Close(DialogResult.Ok(RunFeature)); 

    private void OnModelChange(IEnumerable<string> model)
    {
        var selectedModel = model.First();
        if (RunFeature.Inputs.ModelType == "Image" && selectedModel != "Image")
        {
	        RunFeature.Inputs.DataSetType = "Graph";
        }

        RunFeature.Inputs.ModelType = model.First();
        if (RunFeature.Inputs.ModelType == "Image")
        {
	        RunFeature.Inputs.DataSetType = "Polygon";
        }
    }
    
    private void OnDataSetChange(IEnumerable<string> value)
    {
        RunFeature.Inputs.DataSetType = value.First();
    }
}