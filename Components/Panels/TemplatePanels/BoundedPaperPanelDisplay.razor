@inherits PanelDisplayComponent<BoundedPaperPanel>

@if (CanDisplay())
{
    <MudPaper Elevation="2" Class="pa-3" Height="@GetHeight()" @key="@TrackByKey()">
        @if (Model.DisplayHeader)
        {
            <PanelHeader Title="@Model.Title"/>
        }
        <DynamicComponent Type="@Model.Content" Parameters="@Model.Props"/>
    </MudPaper>
}

@code {
    private string GetHeight() => $"{Model.Height}px";
}